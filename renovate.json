{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":dependencyDashboard"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "github-actions",
        "dockerfile"
    ],
    "github-actions": {
        "commitMessageTopic": "chore(deps): update github actions {{ depName }}",
        "fileMatch": [
            "^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$",
            "(^|/)action\\.ya?ml$"
        ]
    },
    "dockerfile": {
        "commitMessageTopic": "chore(deps): update dockerfile {{ depName }}",
        "fileMatch": [
            "(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$",
            "(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$"
        ]
    }
}